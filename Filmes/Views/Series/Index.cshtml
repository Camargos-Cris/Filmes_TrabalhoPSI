@model IEnumerable<Filmes.Models.Series>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-white">Series</h1>

<table class="ml0">
    <tr>
        <td class="col-sm-6">
            @if (User.Identity.Name == "cristiano.camargos@gmail.com")
            {


                <a class="nav-link text-white border rounded" asp-action="Create"><span>Inserir Serie</span></a>

            }
        </td>
        <td class="col-sm-6">
            <a class="nav-link text-white border rounded" asp-action="TopSerie"><span>Top Series</span></a>
        </td>
    </tr>
</table>
<table class="table table-striped table-condensed table-bordered" id="table1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data_lancamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade_temp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Avaliacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Classificacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data_lancamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade_temp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Avaliacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Autor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Classificacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    <a asp-action="Avaliar" asp-route-id="@item.Id">Avaliar</a>|
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>|
                    @if (User.Identity.Name == "cristiano.camargos@gmail.com")
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit|</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
